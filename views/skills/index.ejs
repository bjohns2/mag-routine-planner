<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MAG Routine Planner</title>
  <link rel="stylesheet" type="text/css" href="/css/skeleton.css" />
</head>
<body class="container">
<div class="row">
  <h1> Skills </h1>

  <h2>Create new skill</h2>
  <form action="/skills" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name">
    <label for="event">Event</label>
    <select name="event" id="event">
      <option value="">Select an event</option>
      <% ['FX', 'PH', 'SR', 'VT', 'PB', 'HB'].forEach((eventType) => { %>
        <% if (eventType === skills[skills.length -1].event) { %>
          <option value="<%= eventType %>" selected><%= eventType %></option>
        <% } else { %>
          <option value="<%= eventType %>"><%= eventType %></option>
        <% }  %>
    <% })  %>
    </select> 
    <label for="name">Difficulty</label>
    <input type="text" name="difficulty"  value="<%= skills[skills.length -1].difficulty %>">
    <label for="name">Element group</label>
    <input type="text" name="elementGroup"  value="<%= skills[skills.length -1].elementGroup %>">
    <br>
    <br>
    <button type="submit">Submit</button>
  </form>

  <h2> Skills </h2>
  <table id="table1">
    <tr>
      <th>Name</th>
      <th>Event</th>
      <th>Difficulty</th>
      <th>Value</th>
      <th>Element group</th>
      <th>Actions</th>
    </tr>
    <% skills.forEach(skill => {%>
      <tr >
        <td><%= skill.name %></td>
        <td><%= skill.event %></td>
        <td><%= skill.difficulty %></td>
        <td><%= skill.value %></td>
        <td><%= skill.elementGroup %></td>
        <td><a href="/skills/<%= skill._id %>" >Edit</a> </td>
      </tr>
    <% }) %>
  </table>
</div>

<script language="javascript" type="text/javascript" src="/javascript/TableFilter_EN/tablefilter.js"></script>
<script language="javascript" type="text/javascript">
	setFilterGrid("table1");
</script> 
</body>
</html>