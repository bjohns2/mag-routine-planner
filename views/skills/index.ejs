<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MAG Routine Planner</title>
  <link rel="stylesheet" type="text/css" href="/css/skeleton.css" />
</head>
<body>
  <h1> Skills </h1>

  <h2>Create new skill</h2>
  <form action="/skills" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name">
    <label for="name">Difficulty</label>
    <input type="text" name="difficulty">
    <label for="name">Value</label>
    <input type="text" name="value">
    <label for="name">Element group</label>
    <input type="text" name="elementGroup">
    <br>
    <br>
    <button type="submit">Submit</button>
  </form>

  <h2> Skills </h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Difficulty</th>
      <th>Value</th>
      <th>Element group</th>
      <th>Actions</th>
    </tr>
    <% skills.forEach(skill => {%>
      <tr >
        <td><%= skill.name %></td>
        <td><%= skill.difficulty %></td>
        <td><%= skill.value %></td>
        <td><%= skill.elementGroup %></td>
        <td><button onclick="deleteSkill('<%= skill._id %>')">Delete</button> </td>
        </tr>
    <% }) %>
  </table>
</body>
</html>

<script>
  const deleteSkill = (skillId) => {
    fetch('/skills', {
      method: 'delete',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        skillId: skillId
      })
    }).then(data => {
      window.location.reload()
    })
  }
</script>